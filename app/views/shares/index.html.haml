.ui.header Ride shares


- @shares.each do |share|
  .ui.fluid.card
  
    .content
      .right.floated.meta 
        = share.date
      %img
        = image_tag share.user_avatar , class: "ui avatar image "
        = share.username
    .content
      %p 
        = share.body
      %i.money.icon
        = share.price
      %span.right.floated
        = share.experience
    .content
      %span.right.floated
        %i.road.icon
          = share.distance
      %i.car.icon
        = share.car_make
    .extra.content
      = share.route
      %span.right.floated
        = share.location
    .extra.content
      = share.luggage
    .extra.content
      .inline.field
      -if share.user_id == current_user.id
        = link_to 'Show', share
        = link_to 'Edit', edit_share_path(share)
        = link_to 'Destroy', share, :method => :delete, :data => { :confirm => 'Are you sure?' }


%br

= link_to 'New Share', new_share_path
