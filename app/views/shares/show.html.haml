
%p#notice= notice

.ui.fluid.card

  .content
    .right.floated.meta 
      = @share.date
    %img
      = image_tag @share.user_avatar , class: "ui avatar image "
      = @share.username
  .content
    %p 
      = @share.body
    %i.money.icon
      = @share.price
    %span.right.floated
      = @share.experience
  .content
    %span.right.floated
      %i.road.icon
        = @share.distance
    %i.car.icon
      = @share.car_make
  .extra.content
    = @share.route
    %span.right.floated
      = @share.location
  .extra.content
    = @share.luggage
  .extra.content
    -if @share.user_id == current_user.id
      = link_to 'Edit', edit_share_path(@share)
      \|
      = link_to 'Back', shares_path

