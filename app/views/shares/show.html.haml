=render 'layouts/header'
%p#notice= notice
.ui.basic.segment
  .ui.special.cards
    .ui.fluid.card

      .content
        .right.floated.meta 
          - if present?
            = @share.date.readable_inspect() 
        %img
          %i.user.icon.link.icon
          = @share.username
      .content
        %p 
          = @share.body
      .content
        %i.money.icon
        = @share.price
        %span.right.floated
          %i.user.icon
          = @share.experience
      .content
        %span.right.floated
          %i.road.icon
          = @share.distance
        %i.car.icon
        = @share.car_make
      .extra.content
        = @share.route
        %span.right.floated
          %i.marker.icon
          = @share.location
      .extra.content
        %i.briefcase.icon
        = @share.luggage
      .extra.content
        -if signed_in? && @share.user_id == current_user.id 
          = link_to 'Edit', edit_share_path(@share)
          \|
          = link_to 'Back', shares_path
